<h1>[{{title}}] 글 {{#if (eq mode "create")}}작성{{else}}수정{{/if}}</h1>
<div>
  <form {{#if (eq mode "create")}}action="/write"{{else}}action="/modify"{{/if}} name="boardForm" method="post">
    {{#if (eq mode "modify")}}
    <input type="hidden" name="id" value="{{post._id}}">
    {{/if}}
    <div>
      <label for="">제목</label>
      <input
        type="text"
        name="title"
        placeholder="제목을 넣어주세요"
        value="{{post.title}}"
      />
    </div>
    <div>
      <label for="">이름</label>
      <input
        type="text"
        name="writer"
        placeholder="이름을 넣어주세요"
        value="{{post.writer}}"
      />
    </div>
    <div>
      <label for="">비밀번호</label>
      <input
        type="password"
        name="password"
        placeholder="비밀번호를 넣어주세요"
        value=""
      />
    </div>

    <div>
      <label for="">본문</label><br />
      <textarea
        name="content"
        id=""
        cols="50"
        rows="10"
        placeholder="본문"
      >{{post.content}}</textarea>
    </div>
    <div>
      <button type="submit">저장</button>
      <button type="button" onclick="location.href='/'">취소</button>
    </div>
  </form>
</div>